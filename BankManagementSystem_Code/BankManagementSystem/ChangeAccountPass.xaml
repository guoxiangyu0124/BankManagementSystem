<Page x:Class="BankManagementSystem.ChangeAccountPass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChangeAccountPass" Height="500" Width="610">
    <Grid >
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF382AC9" Offset="0"/>
                <GradientStop Color="#FFD6F1D0" Offset="1.334"/>
            </LinearGradientBrush>
        </Grid.Background>

        <TextBlock Text="更改账户密码" FontSize="23" TextAlignment="Center" Grid.Row="0" Margin="-10,28,10,400" />
        <TextBlock Margin="75,136,482,335" Text="账户：" FontSize="18"/>
        <TextBox Name="userAccountId" Margin="159,122,75,0" Height="43" VerticalAlignment="Top" />
        <TextBlock Margin="63,210,464,251" FontSize="18" RenderTransformOrigin="0.5,3.875">原密码：</TextBlock>
        <PasswordBox Name="oldPass" Margin="159,205,75,251"/>
        <TextBlock Margin="63,290,464,0" FontSize="18" Height="27" VerticalAlignment="Top">新密码：</TextBlock>
        <PasswordBox Name="newPass" Margin="159,285,75,168"/>
        <Button Name="btnOk" FontSize="18" Margin="159,384,344,71" Padding="3" Click="btnOk_Click" Content="确定" RenderTransformOrigin="1.1,9.115"/>
        <Button Name="btnCancel" FontSize="18" Margin="334,384,172,71" Padding="3" Click="btnCancel_Click" Content="取消" RenderTransformOrigin="5.46,9.192"/>


    </Grid>
</Page>
